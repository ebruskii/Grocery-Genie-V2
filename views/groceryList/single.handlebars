<div class = "single-list-view">
    <h1>{{groceryList.groceryName}}</h1>
    <p>List Type: {{groceryList.listType}}</p>
    <ul class ="list-items">
        {{#each groceryList.items}}
        <li>
            <div class ='itemname'>{{itemName}}</div>
            <div class="item-info">
                Quantity: {{quantity}} | Priority: {{priority}} | Category: {{category}} | Comments: {{comments}} 
            </div> 
            <div class = "links">
                <a href="/items/increaseQ/{{_id}}?listId={{../groceryList._id}}" class="edit-link">Quantity +1</a>
                <a href="/items/editItem/{{_id}}?listId={{../groceryList._id}}" class="edit-link">Edit</a>
                <a href="/items/deleteItem/{{_id}}?listId={{../groceryList._id}}">Delete</a>
            </div>
        {{/each}}
        </li>
    </ul>

    <a href="/items/createItem?listId={{listId}}">Add New Item</a><br>
    <a href="/household/info">Back to My Household</a>
</div>